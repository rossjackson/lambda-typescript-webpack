    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "/auth/sign-in",
            "invokeTarget": {
                "target": "code",
                "lambdaHandler": "src/lambdas/auth.handler",
                "projectRoot": "${workspaceFolder}"
            },
            "lambda": {
                "runtime": "nodejs16.x",
                "payload": {
                    "path": "${workspaceFolder}/src/lambdas/events/auth/signInEvent.json"
                }
            }
        }
    ]
}
